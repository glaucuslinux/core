prepare() {
  cd "$tmp"/gcc/gcc-$ver/build

  make \
    -C $host/$nom \
    distclean
}

build() {
  make \
    all-target-$nom
}

package() {
  make \
    DESTDIR="$toolchain" \
    install-strip-target-$nom

  # Remove static libraries
  rm -fv \
    "$toolchain"/lib/gcc/$host/$ver/${nom}_eh.a \
    "$toolchain"/lib/gcc/$host/$ver/libgcov.a
}
