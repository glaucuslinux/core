prepare() {
  cd /var/tmp/rad/gcc/gcc-14.2.0/build

  make \
    -C $GLAUCUS_HOST/libgcc \
    distclean
}

build() {
  make \
    all-target-libgcc
}

package() {
  make \
    install-strip-target-libgcc

  # Remove static libraries
  rm -fv \
    "$GLAUCUS_TOOLCHAIN"/usr/lib/gcc/$GLAUCUS_HOST/14.2.0/libgcc_eh.a \
    "$GLAUCUS_TOOLCHAIN"/usr/lib/gcc/$GLAUCUS_HOST/14.2.0/libgcov.a
}
