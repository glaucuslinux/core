package() {
  mkdir -p "$dir"/boot
  mv -f "$tmp"/$nom/usr "$dir"
  mv -f "$dir"/usr/lib/modules/$ver-cachyos/vmlinuz "$dir"/boot

  depmod -b "$dir" $ver-cachyos
}
