prepare() {
  cd /var/tmp/rad/musl/musl-1.2.5

  patch \
    -i /var/lib/rad/repo/core/musl/patches/glaucus/0001-fix-utmp-file-path.patch \
    -p 0
  patch \
    -i /var/lib/rad/repo/core/musl/patches/upstream/CVE-2025-26519.patch \
    -p 1
}

package() {
  make \
    exec_prefix=/usr \
    bindir=/usr/bin \
    prefix=/usr \
    libdir=/usr/lib \
    syslibdir=/usr/lib \
    ARCH=x86_64 \
    DESTDIR="$GLAUCUS_CROSS" \
    install-headers

  # BSD compatibility header
  cp -fPp /var/lib/rad/repo/core/musl/files/queue.h "$GLAUCUS_CROSS"/usr/include/sys

  # `utmps` provides `utmpx.h`
  rm -fv "$GLAUCUS_CROSS"/usr/include/utmpx.h
}
