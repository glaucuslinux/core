prepare() {
  cd "$tmp"/musl/musl-$ver

  patch \
    -i "$core"/musl/patches/glaucus/0001-fix-utmp-wtmp-paths.patch \
    -p 0

  for i in \
  0001-isatty-do-not-collapse-all-non-EBADF-errors-to-ENOTTY \
  0002-iconv-fix-erroneous-input-validation-in-EUC-KR-decoder \
  0003-iconv-harden-UTF-8-output-code-path-against-input-decoder-bugs \
  0004-stdio-skip-empty-iovec-when-buffering-is-disabled; do
    patch \
      -i "$core"/musl/patches/upstream/$i.patch \
      -p 1
  done

  rm -fv \
    src/string/x86_64/memcpy.s \
    src/string/x86_64/memmove.s
}

package() {
  make \
    exec_prefix=/usr \
    bindir=/usr/bin \
    prefix=/usr \
    libdir=/usr/lib \
    syslibdir=/usr/lib \
    ARCH=x86_64 \
    DESTDIR="$cross" \
    install-headers

  # `utmps` provides both `utmp.h` and `utmpx.h`
  rm -fv \
    "$cross"/usr/include/utmp.h \
    "$cross"/usr/include/utmpx.h
}
