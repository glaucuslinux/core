prepare() {
  cd "$tmp"/$nom/$nom-$nom-$ver
}

configure() {
  glaucus-muon \
    -Dzlib=enabled \
    build
}

build() {
  samu \
    -C build
}

check() {
  muon \
    -C build \
    test \
    -R
}

package() {
  DESTDIR="$dir" \
  muon \
    -C build \
    install
}
