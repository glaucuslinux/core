prepare() {
  cd "$tmp"/gcc/gcc-$ver/build
}

build() {
  make \
    all-target-$nom
}

package() {
  make \
    DESTDIR="$toolchain" \
    install-strip-target-$nom

  # Remove static libraries and libtool archives
  rm -fv \
    "$toolchain"/$host/lib/libstdc++.a \
    "$toolchain"/$host/lib/libstdc++.la \
    "$toolchain"/$host/lib/libstdc++exp.a \
    "$toolchain"/$host/lib/libstdc++exp.la \
    "$toolchain"/$host/lib/libstdc++fs.a \
    "$toolchain"/$host/lib/libstdc++fs.la \
    "$toolchain"/$host/lib/libsupc++.a \
    "$toolchain"/$host/lib/libsupc++.la
}
