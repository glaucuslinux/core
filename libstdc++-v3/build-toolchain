prepare() {
  cd /var/tmp/rad/gcc/gcc-14.2.0/build
}

build() {
  make \
    all-target-libstdc++-v3
}

package() {
  make \
    install-strip-target-libstdc++-v3

  # Remove static libraries and libtool archives
  rm -fv \
    "$GLAUCUS_TOOLCHAIN"/usr/$GLAUCUS_HOST/lib/libstdc++.a \
    "$GLAUCUS_TOOLCHAIN"/usr/$GLAUCUS_HOST/lib/libstdc++.la \
    "$GLAUCUS_TOOLCHAIN"/usr/$GLAUCUS_HOST/lib/libstdc++exp.a \
    "$GLAUCUS_TOOLCHAIN"/usr/$GLAUCUS_HOST/lib/libstdc++exp.la \
    "$GLAUCUS_TOOLCHAIN"/usr/$GLAUCUS_HOST/lib/libstdc++fs.a \
    "$GLAUCUS_TOOLCHAIN"/usr/$GLAUCUS_HOST/lib/libstdc++fs.la \
    "$GLAUCUS_TOOLCHAIN"/usr/$GLAUCUS_HOST/lib/libsupc++.a \
    "$GLAUCUS_TOOLCHAIN"/usr/$GLAUCUS_HOST/lib/libsupc++.la
}
