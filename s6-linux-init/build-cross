prepare() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-use-gnu-hash-style.patch \
    -p 0
}

configure() {
  ./configure \
    --host=$host \
    --prefix=/usr \
    --exec-prefix=/usr \
    --dynlibdir=/usr/lib \
    --bindir=/usr/bin \
    --libexecdir=/usr/lib \
    --libdir=/usr/lib \
    --sysconfdir=/etc \
    --pkgconfdir=/usr/lib/pkgconfig \
    --skeldir=/etc/s6/skel \
    --tmpfsdir=/run \
    --scandir=sv \
    --with-sysdeps="$cross"/usr/lib/skalibs/sysdeps \
    --with-include="$cross"/usr/include \
    --with-lib="$cross"/usr/lib \
    --with-dynlib="$cross"/usr/lib \
    --with-pkgconfig \
    --enable-shared \
    --disable-static \
    --disable-allstatic \
    --enable-pkgconfig \
    --enable-utmps
}

build() {
  make \
    strip
}

package() {
  make \
    DESTDIR="$cross" \
    install
}
