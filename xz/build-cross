prepare() {
  patch \
    -i "$core"/$nom/patches/clear/0001-optimizations.patch \
    -p 0

  ./autogen.sh --no-po4a
}

configure() {
  "$core"/autoconf/files/glaucus-configure \
    --build=$build \
    --host=$host \
    --enable-threads=posix \
    --disable-doc \
    --disable-static \
    --enable-pic \
    --disable-symbol-versions \
    --disable-nls \
    --disable-rpath

  patch \
    -i "$core"/$nom/patches/alpine/0001-disable-rpath.patch \
    -p 0
}

build() {
  make
}

package() {
  make \
    DESTDIR="$cross" \
    install-strip

  # Remove libtool archive
  rm -fv "$cross"/usr/lib/liblzma.la
}
