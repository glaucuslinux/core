prepare() {
  patch \
    -i "$core"/$nom/patches/alpine/$nom-ld-fix-static-linking.patch \
    -p 1

  mkdir -p build
  cd build
}

configure() {
  ../configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib \
    --sysconfdir=/etc \
    --sharedstatedir=/var/lib \
    --localstatedir=/var \
    --libdir=/usr/lib \
    --disable-multilib \
    --enable-shared \
    --disable-static \
    --enable-plugins \
    --enable-64-bit-bfd \
    --enable-targets=x86_64-pep \
    --disable-install-libbfd \
    --enable-deterministic-archives \
    --enable-colored-disassembly \
    --disable-gprofng \
    --enable-x86-relax-relocations \
    --disable-generate-build-notes \
    --disable-x86-used-note \
    --enable-new-dtags \
    --enable-relro \
    --enable-separate-code \
    --enable-rosegment \
    --disable-default-execstack \
    --enable-default-hash-style=gnu \
    --enable-initfini-array \
    --disable-werror \
    --disable-nls \
    --disable-rpath \
    --disable-install-libiberty \
    --disable-cet \
    --enable-host-shared \
    --enable-host-pie \
    --with-pic \
    --with-mmap \
    --with-lib-path=/usr/lib \
    --with-pkgversion="$PRETTY_NAME" \
    --with-bugurl=https://github.com/glaucuslinux/glaucus/issues \
    --without-debuginfod \
    --with-system-zlib \
    --with-zstd \
    --without-msgpack
}

build() {
  make \
    tooldir=/usr
}

check() {
  make \
    check
}

package() {
  make \
    tooldir=/usr \
    DESTDIR="$dir" \
    install-strip

  ln -fs ld.bfd "$dir"/usr/bin/ld

  # Remove static libraries
  rm -fv \
    "$dir"/usr/lib/libbfd.a \
    "$dir"/usr/lib/libctf.a \
    "$dir"/usr/lib/libctf-nobfd.a \
    "$dir"/usr/lib/libopcodes.a \
    "$dir"/usr/lib/libsframe.a
}
