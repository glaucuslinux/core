prepare() {
  patch \
    -i "$core"/$nom/patches/alpine/$nom-ld-fix-static-linking.patch \
    -p 1

  mkdir -p build
  cd build
}

configure() {
  ../configure \
    --prefix="$toolchain"/usr \
    --exec-prefix="$toolchain"/usr \
    --bindir="$toolchain"/usr/bin \
    --sbindir="$toolchain"/usr/bin \
    --libexecdir="$toolchain"/usr/lib \
    --sysconfdir="$toolchain"/etc \
    --sharedstatedir="$toolchain"/var/lib \
    --localstatedir="$toolchain"/var \
    --libdir="$toolchain"/usr/lib \
    --build=$build \
    --host=$build \
    --target=$host \
    --disable-multilib \
    --enable-install-libiberty \
    --enable-plugins \
    --enable-64-bit-bfd \
    --enable-targets=x86_64-pep \
    --enable-deterministic-archives \
    --enable-colored-disassembly \
    --disable-gprofng \
    --disable-compressed-debug-sections \
    --enable-new-dtags \
    --enable-relro \
    --disable-default-execstack \
    --enable-default-hash-style=gnu \
    --enable-initfini-array \
    --disable-werror \
    --disable-nls \
    --disable-rpath \
    --with-pic \
    --with-mmap \
    --with-sysroot="$cross" \
    --with-pkgversion="$PRETTY_NAME" \
    --with-bugurl=https://github.com/glaucuslinux/glaucus/issues \
    --without-debuginfod \
    --with-system-zlib \
    --with-zstd
}

build() {
  make \
    all-$nom \
    all-gas \
    all-ld
}

package() {
  make \
    install-strip-$nom \
    install-strip-gas \
    install-strip-ld

  ln -fs $host-ld.bfd "$toolchain"/usr/bin/$host-ld

  for i in ar as ld ld.bfd nm objcopy objdump ranlib readelf strip; do
    ln -fs ../../bin/$host-$i "$toolchain"/usr/$host/bin/$i
  done
}
