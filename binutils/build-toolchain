prepare() {
  patch \
    -i /var/lib/rad/repo/core/binutils/patches/alpine/binutils-ld-fix-static-linking.patch \
    -p 1
  patch \
    -i /var/lib/rad/repo/core/binutils/patches/glaucus/test.patch \
    -p 0

  mkdir -p build
  cd build
}

configure() {
  ../configure \
    --prefix="$GLAUCUS_TOOLCHAIN"/usr \
    --exec-prefix="$GLAUCUS_TOOLCHAIN"/usr \
    --bindir="$GLAUCUS_TOOLCHAIN"/usr/bin \
    --sbindir="$GLAUCUS_TOOLCHAIN"/usr/bin \
    --libexecdir="$GLAUCUS_TOOLCHAIN"/usr/lib \
    --sysconfdir="$GLAUCUS_TOOLCHAIN"/etc \
    --sharedstatedir="$GLAUCUS_TOOLCHAIN"/var/lib \
    --localstatedir="$GLAUCUS_TOOLCHAIN"/var \
    --libdir="$GLAUCUS_TOOLCHAIN"/usr/lib \
    --build=$GLAUCUS_BUILD \
    --host=$GLAUCUS_BUILD \
    --target=$GLAUCUS_HOST \
    --disable-multilib \
    --enable-install-libiberty \
    --enable-plugins \
    --enable-targets=x86_64-pep \
    --enable-deterministic-archives \
    --enable-colored-disassembly \
    --disable-gprofng \
    --disable-compressed-debug-sections \
    --enable-new-dtags \
    --enable-relro \
    --disable-default-execstack \
    --enable-default-hash-style=gnu \
    --enable-initfini-array \
    --disable-werror \
    --disable-nls \
    --disable-rpath \
    --with-pic \
    --with-mmap \
    --with-sysroot="$GLAUCUS_CROSS" \
    --with-pkgversion="$PRETTY_NAME" \
    --with-bugurl=https://github.com/glaucuslinux/glaucus/issues \
    --without-debuginfod \
    --with-system-zlib \
    --with-zstd
}

build() {
  make \
    all-binutils \
    all-gas \
    all-ld
}

package() {
  make \
    install-strip-binutils \
    install-strip-gas \
    install-strip-ld

  ln -fs $GLAUCUS_HOST-ld.bfd "$GLAUCUS_TOOLCHAIN"/usr/bin/$GLAUCUS_HOST-ld

  for i in ar as ld ld.bfd nm objcopy objdump ranlib readelf strip; do
    ln -fs ../../bin/$GLAUCUS_HOST-$i "$GLAUCUS_TOOLCHAIN"/usr/$GLAUCUS_HOST/bin/$i
  done
}
