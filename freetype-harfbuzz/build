prepare() {
  for i in \
  0001-Enable-table-validation-modules \
  0002-Enable-subpixel-rendering \
  0003-Enable-long-PCF-family-names; do
    patch \
      -i "$core"/freetype/patches/arch/$i.patch \
      -p 1
  done

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --enable-freetype-config \
    --with-zlib \
    --with-bzip2 \
    --with-png \
    --with-harfbuzz \
    --without-brotli \
    --without-librsvg \
    --without-old-mac-fonts \
    --without-fsspec \
    --without-fsref \
    --without-quickdraw-toolbox \
    --without-quickdraw-carbon \
    --without-ats
}

build() {
  make
}

package() {
  make \
    DESTDIR="$dir" \
    install
}
