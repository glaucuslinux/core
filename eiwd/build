prepare() {
  cd "$tmp"/$nom/iwd-$ver

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --enable-pic \
    --enable-pie \
    --disable-dbus \
    --enable-client \
    --disable-dbus-policy \
    --disable-systemd-service \
    --disable-manual-pages \
    --enable-libedit \
    --enable-wired \
    --enable-hwsim \
    --enable-tools \
    --enable-ofono
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$dir" \
    install-strip

  mkdir -p "$dir"/etc/iwd
  cp -fPp "$core"/$nom/files/main.conf "$dir"/etc/iwd

  cp -fPp "$core"/$nom/files/iwd_passphrase "$dir"/usr/bin
}
