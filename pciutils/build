build() {
  make \
    OPT="$CFLAGS" \
    ZLIB=no \
    DNS=yes \
    SHARED=yes \
    LIBKMOD=yes \
    HWDB=yes \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    SBINDIR=/usr/bin \
    SHAREDIR=/usr/share/hwdata \
    LIBDIR=/usr/lib \
    PKGCFDIR=/usr/lib/pkgconfig \
    PCI_IDS=pci.ids \
    PCI_COMPRESSED_IDS=0
}

package() {
  make \
    OPT="$CFLAGS" \
    ZLIB=no \
    DNS=yes \
    SHARED=yes \
    LIBKMOD=yes \
    HWDB=yes \
    PREFIX=/usr \
    BINDIR=/usr/bin \
    SBINDIR=/usr/bin \
    SHAREDIR=/usr/share/hwdata \
    LIBDIR=/usr/lib \
    PKGCFDIR=/usr/lib/pkgconfig \
    PCI_IDS=pci.ids \
    PCI_COMPRESSED_IDS=0 \
    DESTDIR="$dir" \
    install \
    install-lib

  # ids are provided by `hwdata`
  rm -fRv \
    "$dir"/usr/bin/update-pciids \
    "$dir"/usr/share/hwdata

  # Fix library permissions
  chmod 755 "$dir"/usr/lib/libpci.so.$ver
}
