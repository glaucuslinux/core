build() {
  make \
    prefix=/usr \
    bindir=/usr/bin \
    libdir=/usr/lib \
    sysconfdir=/etc \
    LIBINTL=MUSL \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

package() {
  make \
    prefix=/usr \
    bindir=/usr/bin \
    libdir=/usr/lib \
    sysconfdir=/etc \
    LIBINTL=MUSL \
    DESTDIR="$dir" \
    install

  cp -fPp "$core"/$nom/files/config.rpath "$dir"/usr/share/$nom

  ln -fs $nom "$dir"/usr/share/gettext
}
