prepare() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-fix-pkg-config-file.patch \
    -p 0

  ./build/autogen.sh
}

configure() {
  glaucus-configure \
    --disable-static \
    --disable-bsdcpio \
    --disable-rpath \
    --enable-posix-regex-lib=libpcre2posix \
    --enable-xattr \
    --enable-acl \
    --with-pic \
    --without-libb2 \
    --without-iconv \
    --without-cng \
    --without-xml2
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$dir" \
    install-strip

  # Compatibility symlinks
  ln -fs bsdtar "$dir"/usr/bin/tar
  ln -fs bsdunzip "$dir"/usr/bin/unzip
}
