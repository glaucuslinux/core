prepare() {
  patch \
    -i "$core"/$nom/patches/alpine/fix-uninitialized.patch \
    -p 1
  patch \
    -i "$core"/$nom/patches/glaucus/0001-disable-sample-file.patch \
    -p 0

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --without-x
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$dir" \
    install

  mkdir -p "$dir"/etc
  mv $nom.conf "$dir"/etc
}
