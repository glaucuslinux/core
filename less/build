prepare() {
  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --with-secure \
    --with-regex=pcre2
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$dir" \
    install-strip

  # Compatibility symlink
  ln -fs $nom "$dir"/usr/bin/more
}
