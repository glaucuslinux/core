configure() {
  # Hardcoded `gcc` version number
  ARCH=x86_64 \
  CROSS_COMPILE=$GLAUCUS_HOST- \
  LIBCC="$GLAUCUS_TOOLCHAIN"/usr/lib/gcc/$GLAUCUS_HOST/14.2.0/libgcc.a \
  ./configure \
    --host=$GLAUCUS_HOST \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --libdir=/usr/lib \
    --syslibdir=/usr/lib \
    --disable-wrapper \
    --disable-static
}

build() {
  make
}

package() {
  make \
    DESTDIR="$GLAUCUS_CROSS" \
    install-libs

  mkdir -p \
    "$GLAUCUS_CROSS"/etc \
    "$GLAUCUS_CROSS"/usr/bin

  cp -fPp /var/lib/rad/repo/core/musl/files/ld-musl-x86_64.path "$GLAUCUS_CROSS"/etc

  cp -fPp /var/lib/rad/repo/core/musl/files/ldd "$GLAUCUS_CROSS"/usr/bin

  ln -fs libc.so "$GLAUCUS_CROSS"/usr/lib/ld-musl-x86_64.so.1
}
