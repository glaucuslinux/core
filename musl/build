prepare() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-fix-utmp-file-path.patch \
    -p 0

  for i in \
  0001_isatty_do_not_collapse_all_non_EBADF_errors_to_ENOTTY \
  0002_iconv_fix_erroneous_input_validation_in_EUC_KR_decoder \
  0003_iconv_harden_UTF_8_output_code_path_against_input_decoder_bugs \
  0004_stdio_skip_empty_iovec_when_buffering_is_disabled; do
    patch \
      -i "$core"/$nom/patches/upstream/$i.patch \
      -p 1
  done

  rm -fv \
    src/string/x86_64/memcpy.s \
    src/string/x86_64/memmove.s
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --libdir=/usr/lib \
    --syslibdir=/usr/lib \
    --disable-wrapper \
    --disable-static
}

build() {
  make

  $CC $CFLAGS $LDFLAGS "$core"/$nom/files/gencat.c -o gencat
  $CC $CFLAGS $LDFLAGS "$core"/$nom/files/getent.c -o getent
}

package() {
  make \
    DESTDIR="$dir" \
    install

  mkdir -p \
    "$dir"/etc \
    "$dir"/usr/bin

  cp -fPp "$core"/$nom/files/ld-$nom-x86_64.path "$dir"/etc

  mv -f \
    gencat \
    getent \
    "$dir"/usr/bin
  cp -fPp "$core"/$nom/files/true "$dir"/usr/bin/ldconfig
  cp -fPp "$core"/$nom/files/ldd "$dir"/usr/bin

  # BSD compatibility header
  cp -fPp "$core"/$nom/files/queue.h "$dir"/usr/include/sys

  # `utmps` provides `utmpx.h`
  rm -fv "$dir"/usr/include/utmpx.h

  ln -fs libc.so "$dir"/usr/lib/ld-$nom-x86_64.so.1
}
