prepare() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-fix-utmp-wtmp-paths.patch \
    -p 0

  for i in \
  0001-isatty-do-not-collapse-all-non-EBADF-errors-to-ENOTTY \
  0002-iconv-fix-erroneous-input-validation-in-EUC-KR-decoder \
  0003-iconv-harden-UTF-8-output-code-path-against-input-decoder-bugs \
  0004-stdio-skip-empty-iovec-when-buffering-is-disabled; do
    patch \
      -i "$core"/$nom/patches/upstream/$i.patch \
      -p 1
  done

  rm -fv \
    src/string/x86_64/memcpy.s \
    src/string/x86_64/memmove.s
}

configure() {
  ./configure \
    --prefix=/usr \
    --exec-prefix=/usr \
    --bindir=/usr/bin \
    --libdir=/usr/lib \
    --syslibdir=/usr/lib \
    --disable-wrapper \
    --disable-static
}

build() {
  make
}

package() {
  make \
    DESTDIR="$dir" \
    install

  mkdir -p \
    "$dir"/etc \
    "$dir"/usr/bin

  cp -fPp "$core"/$nom/files/ld-$nom-x86_64.path "$dir"/etc

  cp -fPp "$core"/$nom/files/ldd "$dir"/usr/bin
  for i in \
  a2x asciidoc \
  gtkdocize \
  help2man \
  ldconfig \
  makeinfo \
  po4a \
  texi2dvi texi2pdf \
  yodl2man; do
    cp -fPp "$core"/$nom/files/true "$dir"/usr/bin/$i
  done

  # `utmps` provides both `utmp.h` and `utmpx.h`
  rm -fv \
    "$dir"/usr/include/utmp.h \
    "$dir"/usr/include/utmpx.h

  ln -fs libc.so "$dir"/usr/lib/ld-$nom-x86_64.so.1
}
