prepare() {
  ./bootstrap
}

configure() {
  glaucus-configure
}

build() {
  make
}

package() {
  make \
    DESTDIR="$dir" \
    install-strip

  # Replace hard links with symbolic links
  ln -fs aclocal "$dir"/usr/bin/aclocal-$ver
  ln -fs $nom "$dir"/usr/bin/$nom-$ver
}
