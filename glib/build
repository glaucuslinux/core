prepare() {
  rm -fv subprojects/gvdb.wrap
}

configure() {
  glaucus-muon \
    -Dselinux=disabled \
    -Dlibmount=enabled \
    -Dman-pages=disabled \
    -Ddtrace=disabled \
    -Dsystemtap=disabled \
    -Dsysprof=disabled \
    -Dtests=false \
    -Dnls=disabled \
    -Dglib_debug=disabled \
    -Dglib_assert=false \
    -Dglib_checks=false \
    -Dlibelf=disabled \
    -Dintrospection=disabled \
    build
}

build() {
  samu \
    -C build
}

package() {
  DESTDIR="$dir" \
  muon \
    -C build \
    install
}
