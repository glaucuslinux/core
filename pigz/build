build() {
  make \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

check() {
  make \
    tests
}

package() {
  mkdir -p "$dir"/usr/bin
  mv -f $nom "$dir"/usr/bin
  ln -fs $nom "$dir"/usr/bin/gzip
  ln -fs $nom "$dir"/usr/bin/un$nom
}
