prepare() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-customize-login-defaults.patch \
    -p 0
  patch \
    -i "$core"/$nom/patches/glaucus/0002-customize-useradd-defaults.patch \
    -p 0

  autoreconf -vfis
}

configure() {
  LIBS=-lutmps \
  shadow_cv_utmpdir=/run/utmps \
  "$core"/autoconf/files/glaucus-configure \
    --build=$build \
    --host=$host \
    --disable-static \
    --enable-pic \
    --enable-lastlog \
    --disable-logind \
    --disable-nls \
    --disable-rpath \
    --without-audit \
    --without-libpam \
    --without-selinux \
    --with-acl \
    --with-attr \
    --without-tcb \
    --with-yescrypt \
    --without-nscd \
    --without-su \
    --without-libbsd
}

build() {
  make
}

package() {
  make \
    DESTDIR="$cross" \
    install-strip

  # Remove libtool archive
  rm -fv "$cross"/usr/lib/libsubid.la
}
