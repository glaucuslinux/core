configure() {
  "$core"/muon/files/glaucus-meson \
    --cross-file="$core"/muon/files/meson.cross \
    -Dcompressed-help=false \
    -Ddocs=disabled \
    -Dhelp=disabled \
    -Dlua=disabled \
    -Dpython=disabled \
    -Dtests=disabled \
    -Dzstd=enabled \
    build
}

build() {
  meson compile \
    -C build
}

package() {
  DESTDIR="$cross" \
  meson install \
    -C build
}
