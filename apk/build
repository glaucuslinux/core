configure() {
  glaucus-muon \
    -Dcompressed-help=false \
    -Ddocs=disabled \
    -Dhelp=disabled \
    -Dlua=disabled \
    -Dpython=disabled \
    -Dtests=disabled \
    build
}

build() {
  samu \
    -C build
}

package() {
  DESTDIR="$dir" \
  muon \
    -C build \
    install
}
