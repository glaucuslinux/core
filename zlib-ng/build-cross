prepare() {
  patch \
    -i "$core"/$nom/patches/glaucus/0001-disable-static.patch \
    -p 0
}

configure() {
  CHOST=$host \
  ./configure \
    --prefix=/usr \
    --eprefix=/usr \
    --libdir=/usr/lib \
    --sharedlibdir=/usr/lib \
    --zlib-compat \
    --without-vpclmulqdq \
    --without-armv6 \
    --without-armv8 \
    --without-neon \
    --without-rvv \
    --without-zbc \
    --without-altivec \
    --without-power8 \
    --without-power9 \
    --without-crc32-vx \
    --without-crc32-la
}

build() {
  make
}

package() {
  make \
    DESTDIR="$cross" \
    install
}
