build() {
  make \
    CC=$CC \
    LINUX_CFLAGS="$CFLAGS -fno-builtin -fno-stack-protector" \
    LINUX_LIBS="$LDFLAGS -nostdlib" \
    pkg-config-linux-amd64
}

package() {
  mv -f pkg-config-linux-amd64 "$cross"/usr/bin/$nom

  # Compatibility symlinks
  for i in pkg-config $host-pkg-config; do
    ln -fs $nom "$cross"/usr/bin/$i
  done

  mkdir -p "$cross"/usr/share/aclocal
  cp -fPp "$core"/$nom/files/pkg.m4 "$cross"/usr/share/aclocal
}
