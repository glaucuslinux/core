build() {
  make \
    LINUX_CFLAGS="$CFLAGS -fno-builtin -fno-stack-protector" \
    LINUX_LIBS="$LDFLAGS -nostdlib" \
    pkg-config-linux-amd64
}

package() {
  mkdir -p "$dir"/usr/bin
  mv -f pkg-config-linux-amd64 "$dir"/usr/bin/$nom

  # Compatibility symlinks
  for i in pkg-config $target-pkg-config; do
    ln -fs $nom "$dir"/usr/bin/$i
  done

  mkdir -p "$dir"/usr/share/aclocal
  cp -fPp "$core"/$nom/files/pkg.m4 "$dir"/usr/share/aclocal
}
