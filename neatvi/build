prepare() {
  patch \
    -i "$core"/$nom/patches/alpine/conf.patch \
    -p 1
}

build() {
  make \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS"
}

check() {
  ./test.sh
}

package() {
  mkdir -p \
    "$dir"/usr/bin \
    "$dir"/usr/share/$nom

  mv -f vi "$dir"/usr/bin/$nom
  ln -fs $nom "$dir"/usr/bin/ex
  ln -fs $nom "$dir"/usr/bin/vi

  mv -f ecmd.sh "$dir"/usr/share/$nom
}
