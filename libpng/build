prepare() {
  patch \
    -i "$core"/$nom/patches/upstream/$nom-$ver-apng.patch \
    -p 1

  autoreconf -vfis
}

configure() {
  glaucus-configure \
    --disable-static \
    --enable-pic \
    --disable-tests \
    --enable-intel-sse
}

build() {
  make
}

check() {
  make \
    check
}

package() {
  make \
    DESTDIR="$dir" \
    install-strip

  make \
    -C contrib/pngminus \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    PNGLIB_SHARED="-L$dir/usr/lib -lpng" \
    png2pnm \
    pnm2png

  mv -f \
    contrib/pngminus/png2pnm \
    contrib/pngminus/pnm2png \
    "$dir"/usr/bin
}
