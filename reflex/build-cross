prepare() {
  autoreconf -vfis
}

configure() {
  "$core"/autoconf/files/glaucus-configure \
    --build=$build \
    --host=$host \
    --without-man2html
}

build() {
  make
}

package() {
  make \
    DESTDIR="$cross" \
    install

  # Compatibility symlinks
  for i in flex flex++ lex; do
    ln -fs $nom "$cross"/usr/bin/$i
  done
}
